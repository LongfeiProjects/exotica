<launch>

  <arg name="debug" default="false" />
  <arg unless="$(arg debug)" name="launch_prefix" value="" />
  <arg     if="$(arg debug)" name="launch_prefix" value="xterm -e gdb --args" />

  <param name="robot_description" textfile="$(find exotica_examples)/resources/robots/lwr_simplified.urdf" />
  <param name="robot_description_semantic" textfile="$(find exotica_examples)/resources/robots/lwr_simplified.srdf" />

  <node launch-prefix="$(arg launch_prefix)" pkg="non_stop_picking" type="non_stop_picking_node" name="NonStopPickingNode" output="screen">
    <param name="RRTConnectConfigFile" type="string" value="$(find non_stop_picking)/resources/time_indexed_rrt_connect.xml" />
    <param name="EndPoseConfigFile" type="string" value="$(find non_stop_picking)/resources/ik.xml" />
    <param name="TrajectoryOptConfigFile" type="string" value="$(find non_stop_picking)/resources/traj_opt.xml" />
    <param name="ConstraintFile" type="string" value="$(find non_stop_picking)/resources/constraint.traj" />
    <param name="EndEffectorLink" type="string" value="lwr_arm_6_link" />
  </node>

  <node name="rviz" pkg="rviz" type="rviz" respawn="false"	args="-d $(find exotica_examples)/resources/rviz.rviz" />
</launch>
